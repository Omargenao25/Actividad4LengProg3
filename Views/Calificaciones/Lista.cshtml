@model IEnumerable<Actividad4LengProg3.Models.CalificacionViewModel>
@{
    ViewBag.Title = "Listado de Calificaciones";
}

<h3>@ViewBag.Title</h3>
<a asp-action="Registrar" class="btn btn-primary">Registrar nueva calificación</a>


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Matricula Estudiante </th>
            <th>Codigo Materia</th>
            <th>Nota</th>
            <th>Periodo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MatriculaEstudiante</td>
                <td>@item.CodigoMateria</td>
                <td>@item.Nota</td>
                <td>@item.Periodo</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
