@model IEnumerable<Actividad4LengProg3.Models.CalificacionViewModel>
@{
    ViewBag.Title = "Listado de Calificaciones";
}

<h3>@ViewBag.Title</h3>
<a asp-action="Index" asp-controller="Calificaciones" class="btn btn-primary mb-3">Registrar nueva calificación</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Matrícula Estudiante</th>
            <th>Código Materia</th>
            <th>Nota</th>
            <th>Periodo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MatriculaEstudiante</td>
                <td>@item.CodigoMateria</td>
                <td>@item.Nota</td>
                <td>@item.Periodo</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-warning btn-sm text-dark me-1">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

