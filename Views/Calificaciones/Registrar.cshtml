@model Actividad4LengProg3.Models.CalificacionViewModel
@{
    ViewBag.Title = "Registrar Calificación";
}

<h3>@ViewBag.Title</h3>
<form asp-action="Create">
    <div class="mb-3">
        <label class="form-label">Estudiante</label>
        <select asp-for="MatriculaEstudiante" asp-items="ViewBag.Estudiantes" class="form-select"></select>
        <span asp-validation-for="MatriculaEstudiante" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Materia</label>
        <select asp-for="CodigoMateria" asp-items="ViewBag.Materias" class="form-select"></select>
        <span asp-validation-for="CodigoMateria" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Nota</label>
        <input asp-for="Nota" type="number" class="form-control" />
        <span asp-validation-for="Nota" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Periodo</label>
        <input asp-for="Periodo" class="form-control" />
        <span asp-validation-for="Periodo" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>

