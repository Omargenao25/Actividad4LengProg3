@model IEnumerable<Actividad4LengProg3.Models.MateriaViewModel>

@{
    ViewBag.Title = "Lista de Materias";
}

<h2 class="mb-4">@ViewBag.Title</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}

<a asp-action="Registrar" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Registrar Nueva Materia
</a>

<table class="table table-bordered table-striped align-middle">
    <thead class="table-dark">
        <tr>
            <th scope="col">Código</th>
            <th scope="col">Nombre Materia </th>
            <th scope="col">Créditos</th>
            <th scope="col">Carrera</th>
            <th scope="col" class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center text-muted">No hay materias registradas.</td>
            </tr>
        }
        else
        {
            @foreach (var materia in Model)
            {
                <tr>
                    <td>@materia.Codigo</td>
                    <td>@materia.Nombre </td>
                    <td>@materia.Creditos</td>
                    <td>@materia.Carrera</td>
                    <td class="text-center">
                        <a asp-action="Editar" asp-route-id="@materia.Codigo" class="btn btn-warning btn-sm me-1">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Eliminar" asp-route-id="@materia.Codigo" class="btn btn-danger btn-sm"
                           onclick="return confirm('¿Estás seguro que deseas eliminar esta materia?');">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
