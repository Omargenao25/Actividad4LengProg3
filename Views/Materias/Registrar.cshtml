@model Actividad4LengProg3.Models.MateriaViewModel
@{
    ViewBag.Title = "Crear Materia";
}

<h3>@ViewBag.Title</h3>
<form asp-action="Create">
    <div class="mb-3">
        <label class="form-label">Código</label>
        <input asp-for="Codigo" class="form-control" />
        <span asp-validation-for="Codigo" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Créditos</label>
        <input asp-for="Creditos" type="number" class="form-control" />
        <span asp-validation-for="Creditos" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Carrera</label>
        <input asp-for="Carrera" class="form-control" />
        <span asp-validation-for="Carrera" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>

