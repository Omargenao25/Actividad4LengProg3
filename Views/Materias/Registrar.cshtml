@model Actividad4LengProg3.Models.MateriaViewModel
@{
    ViewBag.Title = "Crear Materia";
}

<h3>@ViewBag.Title</h3>
<form asp-action="Registrar">
    <div class="mb-3">
        <label class="form-label">Código</label>
        <input asp-for="Codigo" class="form-control" />
        <<span asp-validation-for="Codigo" class="text-muted small"></span>

    </div>
    <div class="mb-3">
        <label class="form-label">Nombre Materia </label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-muted small"></span>

    </div>
    <div class="mb-3">
        <label class="form-label">Créditos</label>
        <input asp-for="Creditos" type="number" class="form-control" />
        <span asp-validation-for="Creditos" class="text-muted small"></span>

    </div>
    <div class="mb-3">
        <label class="form-label">Carrera</label>
        <input asp-for="Carrera" class="form-control" />
        <span asp-validation-for="Carrera" class="text-muted small"></span>

    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Lista" class="btn btn-secondary ms-2">Cancelar</a>
</form>

