@model IEnumerable<Actividad4LengProg3.Models.MateriaViewModel>

@{
    ViewBag.Title = "Listado de Materias";
}

<h3>@ViewBag.Title</h3>

<p>
    <a class="btn btn-primary" asp-action="Create">Nueva Materia</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>Código</th>
            <th>Nombre</th>
            <th>Créditos</th>
            <th>Carrera</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var materia in Model)
        {
            <tr>
                <td>@materia.Codigo</td>
                <td>@materia.Nombre</td>
                <td>@materia.Creditos</td>
                <td>@materia.Carrera</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@materia.Codigo">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@materia.Codigo">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

