@model Actividad4LengProg3.Models.MateriaViewModel
@{
    ViewBag.Title = "Eliminar Materia";
}

<h3>¿Estás seguro que deseas eliminar esta materia?</h3>

<dl class="row">
    <dt class="col-sm-2">Código</dt>
    <dd class="col-sm-10">@Model.Codigo</dd>

    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>
</dl>

<form asp-action="EliminarConfirmado">
    <input type="hidden" asp-for="Codigo" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Lista" class="btn btn-secondary ms-2">Cancelar</a>
</form>

